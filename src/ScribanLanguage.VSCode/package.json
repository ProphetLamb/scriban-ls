{
  "name": "scriban-language",
  "displayName": "Scriban Language",
  "description": "Scriban Language Support",
  "publisher": "prophet-lamb",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configurationDefaults": {
      "[scriban]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "commands": [
      {
        "command": "scriban-language.trace",
        "title": "Scriban enable Trace"
      }
    ],
    "languages": [
      {
        "id": "scriban",
        "aliases": [
          "Scriban",
          "scriban"
        ],
        "extensions": [
          ".scriban"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "scriban",
        "scopeName": "source.scriban",
        "path": "./syntaxes/scriban.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "bun run compile-tests && bun run compile && bun run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "syntaxes": "bun syntaxes/syntaxes-to-json.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "js-yaml": "^4.1.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}